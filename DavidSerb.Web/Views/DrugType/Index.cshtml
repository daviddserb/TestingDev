@model List<DavidSerb.Web.Models.DrugType>

<h1>DrugTypes</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var drugType in Model)
        {
        <tr>
            <td>@drugType.DrugTypeId</td>
            <td>@drugType.DrugTypeName</td>
            <td>
                <a class="btn btn-primary" href="@Url.Action("Edit", new { id = drugType.DrugTypeId })">Edit</a>
                <a class="btn btn-danger" href="@Url.Action("Delete", new { id = drugType.DrugTypeId })">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>

<p>
    <a class="btn btn-primary" href="@Url.Action("Create")">Create new</a>
</p>