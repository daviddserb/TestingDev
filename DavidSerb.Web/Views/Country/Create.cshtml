@model DavidSerb.DataModel.Models.Country

<h1>Create Country</h1>

<fieldset>
    @using (Html.BeginForm())
     {
        <p>
            @Html.LabelFor(country => country.CountryId)
            @Html.EditorFor(country => country.CountryId)
            @Html.ValidationMessageFor(country => country.CountryId, "", new { style = "color: red" });
        </p>
        <p>
            @Html.LabelFor(country => country.CountryName)
            @Html.TextBoxFor(country => country.CountryName)
            @Html.ValidationMessageFor(country => country.CountryName, "", new { style = "color: red"});
        </p>
        <button class="btn btn-primary" type="submit">Create</button>
     }
</fieldset>